{
  "name": "coldwallet-standalone",
  "version": "1.0.0",
  "description": "Minimal standalone server for Cold Wallet plugin",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "prestart": "node -e \"require('child_process').execSync(process.platform==='win32'?'check-plugin-sync.bat':'bash check-plugin-sync.sh',{stdio:'inherit'})\" || true",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "check-sync": "node -e \"require('child_process').execSync(process.platform==='win32'?'check-plugin-sync.bat':'bash check-plugin-sync.sh',{stdio:'inherit'})\"",
    "update-plugin": "node -e \"require('child_process').execSync(process.platform==='win32'?'update-plugin.bat':'bash update-plugin.sh',{stdio:'inherit'})\"",
    "build": "pkg . --compress GZip",
    "build:win": "pkg . --targets node18-win-x64 --output dist/coldwallet-win.exe --compress GZip",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/coldwallet-linux --compress GZip",
    "build:mac": "pkg . --targets node18-macos-x64 --output dist/coldwallet-mac --compress GZip",
    "build:all": "npm run build:win && npm run build:linux && npm run build:mac"
  },
  "keywords": [
    "coldwallet",
    "tss",
    "crypto",
    "wallet"
  ],
  "author": "Lokblok, Inc.",
  "private": true,
  "license": "UNLICENSED",
  "dependencies": {
    "dotenv": "^16.4.7",
    "ejs": "^3.1.8",
    "ejs-mate": "^4.0.0",
    "express": "^4.18.2",
    "sequelize": "^6.35.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "views/**/*",
      "public/**/*",
      "models/**/*",
      "config/**/*",
      "node_modules/ejs/**/*",
      "node_modules/ejs-mate/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64"
    ],
    "outputPath": "dist"
  }
}