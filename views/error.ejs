<% layout('layout-minimal') %>

<div style="max-width: 800px; margin: 50px auto; padding: 40px; background: white; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); text-align: center;">
  <div style="font-size: 72px; color: #e74c3c; margin-bottom: 20px;">
    <i class="fas fa-exclamation-triangle"></i>
  </div>
  
  <h1 style="color: #2c3e50; margin: 0 0 10px 0; font-size: 48px;">
    <%= errorCode || 500 %>
  </h1>
  
  <h2 style="color: #34495e; margin: 0 0 20px 0; font-weight: 400;">
    <%= errorMessage || "Something went wrong!" %>
  </h2>
  
  <p style="color: #7f8c8d; margin: 0 0 30px 0; line-height: 1.6;">
    <%= errorDescription || "We encountered an unexpected error. Please try again later or contact support." %>
  </p>
  
  <a href="/" style="display: inline-block; padding: 12px 30px; background: #3498db; color: white; text-decoration: none; border-radius: 4px; font-weight: 500; transition: background 0.3s;">
    <i class="fas fa-home"></i> Return to Cold Wallet
  </a>
</div>
